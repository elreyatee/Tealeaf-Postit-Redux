<%= render 'shared/content_title', title: 'Create a new category' %>

<% if @category.errors.any? %>
  <div class="alert alert-error">
    <h5> You have <%= "#{pluralize(@category.errors.count, "error")}" %></h5>
    <ul>
      <% @category.errors.full_messages.each do |msg| %>
        <li><%= "#{msg}" %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class='well'>
  <%= form_for @category do |f| %>
    <div class='control-group'> 
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>
    <%= f.submit class: 'btn btn-success' %>
  <% end %>
</div>